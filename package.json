{
  "name": "@lightelligence/react",
  "version": "1.0.0-rc.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightelligence-io/react.git"
  },
  "main": "dist/cjs/index.js",
  "scripts": {
    "start": "styleguidist server",
    "build": "rm -rf dist && rm -rf styles && npm run transpile-esm && npm run transpile-cjs && npm run build:copy-styles",
    "build:copy-styles": "cp -r src/index.css dist/ && mv dist/cjs/styles .",
    "build:docs": "styleguidist build && touch ./docs/.nojekyll",
    "pretest": "npm run lint",
    "coveralls": "react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "test": "react-scripts test",
    "test:nolint": "node ./node_modules/react-scripts/scripts/test.js",
    "lint": "eslint src/ --max-warnings 0 && prettier -c \"src/**/*.js\"",
    "lint:fix": "eslint --fix src/ --max-warnings 0 && prettier -c --write \"src/**/*.js\"",
    "license-report": "legally -lr",
    "transpile-esm": "BABEL_ENV=esm babel src -d dist/esm --copy-files",
    "transpile-cjs": "BABEL_ENV=cjs babel src -d dist/cjs --copy-files"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lightelligence/styles": "1.0.0-rc.2",
    "@testing-library/jest-dom": "^4.2.3",
    "classnames": "^2.2.6",
    "clipboard-copy": "^3.1.0",
    "humps": "^2.0.1",
    "prop-types": "^15.6.2",
    "react-circular-progressbar": "^2.0.3",
    "react-uid": "^2.2.0",
    "svg-url-loader": "^3.0.2",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "use-onclickoutside": "^0.3.1",
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^2.0.3",
    "@testing-library/user-event": "^7.1.2",
    "acorn": "^6.3.0",
    "audit-ci": "^2.4.2",
    "coveralls": "^3.0.7",
    "css-loader": "^3.2.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "history": "^4.10.1",
    "husky": "^3.0.9",
    "legally": "^3.3.7",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.13.0",
    "normalize.css": "^8.0.1",
    "prettier": "^1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-router-prop-types": "^1.0.4",
    "react-scripts": "^3.2.0",
    "react-styleguidist": "^9.2.0",
    "react-test-renderer": "^16.11.0",
    "url-polyfill": "^1.1.7"
  },
  "peerDependencies": {
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react": "^16.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
