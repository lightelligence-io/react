{
  "name": "@lightelligence/react",
  "version": "0.10.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightelligence-io/react.git"
  },
  "main": "dist/cjs/index.js",
  "scripts": {
    "start": "styleguidist server",
    "build": "rm -rf dist && rm -rf styles && npm run transpile-esm && npm run transpile-cjs && npm run build:copy-styles",
    "build:copy-styles": "cp -r src/index.css dist/ && mv dist/cjs/styles .",
    "build:docs": "styleguidist build && touch ./docs/.nojekyll",
    "pretest": "npm run lint",
    "coveralls": "react-scripts test --coverage --coverageReporters=text-lcov | coveralls",
    "test": "react-scripts test",
    "lint": "eslint src/ --max-warnings 0 && prettier -c \"src/**/*.js\"",
    "lint:fix": "eslint --fix src/ --max-warnings 0 && prettier -c --write \"src/**/*.js\"",
    "license-report": "legally",
    "transpile-esm": "BABEL_ENV=esm babel src -d dist/esm --copy-files",
    "transpile-cjs": "BABEL_ENV=cjs babel src -d dist/cjs --copy-files"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@lightelligence/styles": "^0.10.0",
    "classnames": "^2.2.6",
    "humps": "^2.0.1",
    "prop-types": "^15.6.2",
    "react-uid": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "audit-ci": "^2.2.0",
    "coveralls": "^3.0.5",
    "css-loader": "^2.1.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "history": "^4.9.0",
    "husky": "^2.2.0",
    "jest-dom": "^3.1.3",
    "legally": "^3.3.7",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "prettier": "^1.17.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react-router-prop-types": "^1.0.4",
    "react-scripts": "^3.0.0",
    "react-styleguidist": "^9.1.16",
    "react-testing-library": "^6.0.1",
    "url-polyfill": "^1.1.3"
  },
  "peerDependencies": {
    "react-dom": "^16.8.4",
    "react-router-dom": "^5.0.0",
    "react": "^16.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageReporters": [
      "html",
      "text"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
